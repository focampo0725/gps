<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    tools:context=".ui.main.personnel_identification.PersonnelIdentificationActivity">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/tvTitlePI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de Seguridad"
        android:textColor="@color/title"
        android:fontFamily="@font/inter"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
      />
    <TextView
        android:id="@+id/tvSubTitlePI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu código de seguridad \npara continuar"
        android:textColor="@color/sub_title"
        android:fontFamily="@font/inter"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePI"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePI"
        app:layout_constraintEnd_toEndOf="@+id/tvTitlePI"
        />

    <!-- CÓDIGO DE SEGURIDAD -->
    <TextView
        android:id="@+id/tvSecurityCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="*****"
        android:textColor="@color/title"
        android:textSize="32sp"
        android:fontFamily="@font/roboto_mono_regular"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:background="@drawable/bg_code_box"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitlePI"
        app:layout_constraintStart_toStartOf="@id/tvSubTitlePI"
        app:layout_constraintEnd_toEndOf="@id/tvSubTitlePI"/>

    <!-- BOTÓN INFO -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInfo"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_buttom_information"
        android:tooltipText="Ventana de información"
        android:contentDescription="Más información"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvSecurityCode"
        app:layout_constraintStart_toStartOf="@id/tvSecurityCode"
        app:layout_constraintEnd_toEndOf="@id/tvSecurityCode"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:padding="5dp"
        android:background="@drawable/bg_keyboard_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <include
            android:id="@+id/numeric_keyboard"
            layout="@layout/numeric_keyboard" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
