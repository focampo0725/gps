<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    tools:context=".ui.main.device_synchronization.DeviceSynchronizationActivity">
    <LinearLayout
        android:id="@+id/llCompanyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:paddingStart="15dp"
        android:gravity="start|center_vertical"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_company_64"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textColor="@color/title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_mono_regular"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTitleDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de Dispositivo"
        android:textColor="@color/title"
        android:fontFamily="@font/inter"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/llCompanyContainer"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvDeviceCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="*****"
        android:textColor="@color/title"
        android:textSize="32sp"
        android:fontFamily="@font/roboto_mono_regular"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:background="@drawable/bg_code_box"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDS"
        app:layout_constraintStart_toStartOf="@id/tvTitleDS"
        app:layout_constraintEnd_toEndOf="@id/tvTitleDS"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInfo"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_buttom_information"
        android:tooltipText="Se requiere el código del dispositivo \npara realizar la sincronización de datos."
        android:contentDescription="Más información"
        app:layout_constraintTop_toBottomOf="@id/tvDeviceCode"
        app:layout_constraintStart_toStartOf="@id/tvDeviceCode"
        app:layout_constraintEnd_toEndOf="@id/tvDeviceCode"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:padding="5dp"
        android:background="@drawable/bg_keyboard_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <include
            android:id="@+id/numeric_keyboard"
            layout="@layout/numeric_keyboard" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>